{
  "version": 2,
  "buildCommand": "npm run build && npm run copy-server",
  "outputDirectory": "build",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "/api/server"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "functions": {
    "api/server.ts": {
      "maxDuration": 30
    }
  }
}
